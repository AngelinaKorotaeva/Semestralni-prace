<Window x:Class="SkolniJidelna.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vytvořit objednávku - Školní jídelna" Height="900" Width="1300"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель: меню -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF6B9E" Offset="0"/>
                    <GradientStop Color="#FF8B5E" Offset="0.5"/>
                    <GradientStop Color="#FFB66E" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Canvas>
                <Ellipse Width="150" Height="150" Fill="#30FFFFFF" Canvas.Left="-50" Canvas.Top="100"/>
                <Ellipse Width="200" Height="200" Fill="#20FFFFFF" Canvas.Left="200" Canvas.Top="400"/>
            </Canvas>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Panel.ZIndex="1">
                <StackPanel VerticalAlignment="Top" Margin="40" Panel.ZIndex="1">
                    <TextBlock Text="Vyberte jídla" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,20,0,20"/>

                    <!-- Фильтры -->
                    <TextBlock Text="Typ menu" FontSize="16" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <ComboBox x:Name="comboTypMenu" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,20">
                        <ComboBoxItem Content="Vše"/>
                        <ComboBoxItem Content="SNIDANE"/>
                        <ComboBoxItem Content="OBED"/>
                    </ComboBox>

                    <Button Content="Filtrovat" Style="{StaticResource LightButton}" Margin="0,0,0,30" Click="FilterButton_Click"/>

                    <!-- Список блюд -->
                    <ItemsControl x:Name="itemsControlJidla" Margin="0,0,0,20" Height="430">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="15" Background="White" Padding="15" Margin="0,0,0,15">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.1" Color="#FF6B9E"/>
                                    </Border.Effect>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#FFF5A623" Offset="0"/>
                                                                <GradientStop Color="#FFFFD700" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Nazev}" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding Popis}" FontSize="12" Foreground="#757575" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding Cena, StringFormat='Cena: {0} Kč'}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                        <Button Content="Přidat do objednávky" Style="{StaticResource SecondaryButton}" Padding="10,5" Click="AddToOrderButton_Click" Tag="{Binding IdJidlo}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Правая панель: корзина заказа -->
        <Grid Grid.Column="1">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFF5F8" Offset="0"/>
                    <GradientStop Color="#FFF9F0" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Canvas>
                <Ellipse Width="120" Height="120" Fill="#FFE5B430" Canvas.Right="50" Canvas.Top="80"/>
                <Ellipse Width="80" Height="80" Fill="#FFB6D930" Canvas.Right="200" Canvas.Top="500"/>
            </Canvas>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Panel.ZIndex="1">
                <StackPanel VerticalAlignment="Top" Margin="70,40" Panel.ZIndex="1">
                    <TextBlock Text="Vaše objednávka" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,20">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FF6B9E" Offset="0"/>
                                <GradientStop Color="#FF8B5E" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>

                    <!-- Корзина -->
                    <ItemsControl x:Name="itemsControlOrder" Margin="0,0,0,20">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="10" Background="#F0F0F0" Padding="10" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Nazev}" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding CenaBezDph, StringFormat=`{0} Kč`}" FontSize="14" Margin="0,0,10,0"/>
                                        <Button Content="Odebrat" Style="{StaticResource SecondaryButton}" Padding="5,2" Click="RemoveFromOrderButton_Click" Tag="{Binding IdJidlo}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Итоговая цена -->
                    <TextBlock x:Name="textTotal" Text="Celkem: 0 Kč" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock x:Name="textBalance" Text="Váš zůstatek: 0 Kč" FontSize="16" Foreground="#757575" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                    <!-- Поле для заметки -->
                    <TextBlock Text="Poznámka k objednávce" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBox x:Name="textBoxPoznamka" Style="{StaticResource TextBoxStyle}" Height="60" TextWrapping="Wrap" Margin="0,0,0,30"/>

                    <!-- Кнопки -->
                    <Button Content="Objednat" Style="{StaticResource PrimaryButton}" Margin="0,0,0,15" Click="OrderButton_Click"/>
                    <Button Content="Zpět do profilu" Style="{StaticResource SecondaryButton}" Click="BackButton_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>