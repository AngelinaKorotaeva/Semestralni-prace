<Window x:Class="SkolniJidelna.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Osobní profil - Školní jídelna" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель: баланс и кнопки -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF6B9E" Offset="0"/>
                    <GradientStop Color="#FF8B5E" Offset="0.5"/>
                    <GradientStop Color="#FFB66E" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Canvas>
                <Ellipse Width="150" Height="150" Fill="#30FFFFFF" Canvas.Left="-50" Canvas.Top="100"/>
                <Ellipse Width="200" Height="200" Fill="#20FFFFFF" Canvas.Left="200" Canvas.Top="400"/>
            </Canvas>

            <StackPanel VerticalAlignment="Center" Margin="40" Panel.ZIndex="1">
                <!-- Лого -->
                <Border Background="White" CornerRadius="35" Width="100" Height="100" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="25" ShadowDepth="8" Opacity="0.4" Color="Black"/>
                    </Border.Effect>
                    <Viewbox Width="60" Height="60">
                        <TextBlock Text="👤" FontSize="50"/>
                    </Viewbox>
                </Border>

                <!-- Баланс -->
                <Border Background="#FFFFFF40" CornerRadius="20" Padding="20,15" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Aktuální zůstatek" Foreground="#FFB6D930" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="textBalance" Text="0 Kč" Foreground="#FFB6D930" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10"/>
                        <Button Content="Doplnit zůstatek" Style="{StaticResource LightButton}" Padding="10,8" Click="RechargeBalanceButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- Кнопки для работы с приложением -->
                <Button Content="Zobrazit menu" Style="{StaticResource PrimaryButton}" Margin="0,0,0,15" Click="ViewMenuButton_Click"/>
                <Button Content="Vytvořit objednávku" Style="{StaticResource PrimaryButton}" Margin="0,0,0,15" Click="CreateOrderButton_Click"/>
                <Button Content="Historie objednávek" Style="{StaticResource PrimaryButton}" Margin="0,0,0,30" Click="OrderHistoryButton_Click"/>
                <Button Content="Odhlásit se" Style="{StaticResource LightButton}" Click="LogoutButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Правая панель: сам профиль -->
        <Grid Grid.Column="1">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFF5F8" Offset="0"/>
                    <GradientStop Color="#FFF9F0" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Canvas>
                <Ellipse Width="120" Height="120" Fill="#FFE5B430" Canvas.Right="50" Canvas.Top="80"/>
                <Ellipse Width="80" Height="80" Fill="#FFB6D930" Canvas.Right="200" Canvas.Top="500"/>
            </Canvas>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Panel.ZIndex="1">
                <StackPanel VerticalAlignment="Center" Margin="70,40" Panel.ZIndex="1">
                    <TextBlock Text="Osobní profil" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,30">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FF6B9E" Offset="0"/>
                                <GradientStop Color="#FF8B5E" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>

                    <!-- Фото -->
                    <Border CornerRadius="15" Background="White" Padding="10" Margin="0,0,0,20" HorizontalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.1" Color="#FF6B9E"/>
                        </Border.Effect>
                        <Image x:Name="imageProfile" Width="120" Height="120" Stretch="UniformToFill"/>
                    </Border>

                    <!-- Имя и фамилия -->
                    <TextBlock x:Name="textName" Text="Jméno Příjmení" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock x:Name="textStatus" Text="Status: Pracovník" FontSize="16" Foreground="#757575" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock x:Name="textPositionClass" Text="Pozice/Třída: ..." FontSize="16" Foreground="#757575" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                    <!-- Работники будут устанавливать это самостоятельно, для них аллергии и ограничения - комбо боксы. Для студетов их устанавливает админ, а в профиле просто список.-->
                        <!-- Аллергии -->
                    <TextBlock Text="Alergie" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <ComboBox x:Name="comboAlergies" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,20" Visibility="Collapsed"/>
                    <TextBlock x:Name="textAlergies" Text="Žádné alergie" FontSize="14" Foreground="#999999" Margin="0,0,0,20"/>

                    <!-- Диетные ограничения -->
                    <TextBlock Text="Dietní omezení" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <ComboBox x:Name="comboDietRestrictions" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,20" Visibility="Collapsed"/>
                    <TextBlock x:Name="textDietRestrictions" Text="Žádná omezení" FontSize="14" Foreground="#999999" Margin="0,0,0,30"/>

                    <!-- Кнопка сохранения (только для работников) -->
                    <Button x:Name="saveButton" Content="Uložit změny" Style="{StaticResource PrimaryButton}" Margin="0,0,0,20" Visibility="Collapsed" Click="SaveChangesButton_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>