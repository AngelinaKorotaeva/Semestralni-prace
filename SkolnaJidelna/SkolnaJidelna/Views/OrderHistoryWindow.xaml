<Window x:Class="SkolniJidelna.OrderHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historie objednávek - Školní jídelna" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель: список заказов -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF6B9E" Offset="0"/>
                    <GradientStop Color="#FF8B5E" Offset="0.5"/>
                    <GradientStop Color="#FFB66E" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Canvas>
                <Ellipse Width="150" Height="150" Fill="#30FFFFFF" Canvas.Left="-50" Canvas.Top="100"/>
                <Ellipse Width="200" Height="200" Fill="#20FFFFFF" Canvas.Left="200" Canvas.Top="400"/>
            </Canvas>

            <StackPanel VerticalAlignment="Top" Margin="40" Panel.ZIndex="1">
                <TextBlock Text="Vaše objednávky" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,20,0,20"/>

                <!-- Фильтр по статусу -->
                <TextBlock Text="Filtrovat podle stavu" FontSize="16" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <ComboBox x:Name="comboStatusFilter" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,20" SelectionChanged="FilterChanged">
                    <ComboBoxItem Content="Vše"/>
                    <ComboBoxItem Content="Dokonceno"/>
                    <ComboBoxItem Content="Zrušený"/>
                    <ComboBoxItem Content="V procesu"/>
                    <ComboBoxItem Content="Nezaplacený"/>
                </ComboBox>

                <!-- Список заказов -->
                <ListBox x:Name="listBoxOrders" Style="{StaticResource ListBoxStyle}" Height="400" SelectionChanged="OrderSelected" ItemsSource="{Binding Orders}" SelectedItem="{Binding SelectedOrder, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="10" Background="White" Padding="10" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="{Binding DatumOdberu, StringFormat='Datum odběru: {0:dd.MM.yyyy}'}" FontSize="14" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding DatumVytvoreni, StringFormat='Vytvořeno: {0:dd.MM.yyyy HH:mm}'}" FontSize="12" Foreground="#757575"/>
                                    <TextBlock Text="{Binding CelkovaCena, StringFormat='Cena: {0} Kč'}" FontSize="12" Foreground="#757575"/>
                                    <TextBlock Text="{Binding StavNazev, StringFormat='Stav: {0}'}" FontSize="12" Foreground="#999999"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Content="Zpět do profilu" Style="{StaticResource LightButton}" Margin="0,40,0,0" Click="BackButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Правая панель: детали заказа -->
        <Grid Grid.Column="1">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFF5F8" Offset="0"/>
                    <GradientStop Color="#FFF9F0" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Canvas>
                <Ellipse Width="120" Height="120" Fill="#FFE5B430" Canvas.Right="50" Canvas.Top="80"/>
                <Ellipse Width="80" Height="80" Fill="#FFB6D930" Canvas.Right="200" Canvas.Top="500"/>
            </Canvas>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Panel.ZIndex="1">
                <StackPanel VerticalAlignment="Top" Margin="70,40" Panel.ZIndex="1">
                    <TextBlock Text="Detaily objednávky" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,30">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FF6B9E" Offset="0"/>
                                <GradientStop Color="#FF8B5E" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>

                    <!-- Детали конкретного заказа -->
                    <TextBlock x:Name="textOrderDate" Text="{Binding OrderDateText}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock x:Name="textOrderStatus" Text="{Binding OrderStatusText}" FontSize="16" Foreground="#757575" Margin="0,0,0,10"/>
                    <TextBlock x:Name="textOrderTotal" Text="{Binding OrderTotalText}" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>
                    <TextBlock x:Name="textOrderNote" Text="{Binding OrderNoteText}" FontSize="14" Foreground="#999999" Margin="0,0,0,30"/>

                    <!-- Список блюд -->
                    <TextBlock Text="Jídla v objednávce:" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <ItemsControl x:Name="itemsControlOrderDetails" Margin="0,0,0,10" ItemsSource="{Binding SelectedOrderItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="10" Background="#F0F0F0" Padding="10" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Nazev}" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Mnozstvi, StringFormat='Počet: {0}'}" FontSize="14" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Cena, StringFormat='Cena: {0} Kč'}" FontSize="14" Margin="0,0,10,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Payment buttons row -->
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button x:Name="btnZaplatitKartou" Content="Zaplatit kartou" Style="{StaticResource PrimaryButton}" Width="200" Visibility="{Binding IsSelectedOrderUnpaid, Converter={StaticResource BooleanToVisibilityConverter}}" Click="PayCardButton_Click" Margin="0,0,10,0"/>
                        <Button x:Name="btnZaplatitUctem" Content="Zaplatit z účtu" Style="{StaticResource SecondaryButton}" Width="200" Visibility="{Binding IsSelectedOrderUnpaid, Converter={StaticResource BooleanToVisibilityConverter}}" Click="PayAccountButton_Click"/>
                    </StackPanel>

                    <!-- Action buttons below payments -->
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button x:Name="btnZrusit" Content="Zrušit objednávku" Style="{StaticResource SecondaryButton}" Width="220" Click="CancelButton_Click" Margin="0,0,10,0"/>
                        <Button x:Name="btnTiskPdf" Content="Vytisknout (PDF)" Style="{StaticResource SecondaryButton}" Width="220" Click="PrintPdfButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>