<Window x:Class="SkolniJidelna.CreateStravnikDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vytvořit uživatele" Height="420" Width="550" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{StaticResource LightBackgroundGradient}" AllowsTransparency="False">
	<Grid Margin="16">
		<Border  Padding="16">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="10" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="10" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="18" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Nový záznam" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left"/>

				<TextBlock Grid.Row="2" Grid.Column="0" Text="Jméno:" VerticalAlignment="Center" Foreground="{StaticResource DarkTextColor}" Margin="0,4,12,4"/>
				<TextBox Grid.Row="2" Grid.Column="1" Name="txtJmeno" Margin="0,4,0,15" Style="{StaticResource TextBoxStyle}"/>

				<TextBlock Grid.Row="4" Grid.Column="0" Text="Příjmení:" VerticalAlignment="Center" Foreground="{StaticResource DarkTextColor}" Margin="0,4,12,4"/>
				<TextBox Grid.Row="4" Grid.Column="1" Name="txtPrijmeni" Margin="0,4,0,5" Style="{StaticResource TextBoxStyle}"/>

				<TextBlock Grid.Row="6" Grid.Column="0" Text="Email:" VerticalAlignment="Center" Foreground="{StaticResource DarkTextColor}" Margin="0,4,12,4"/>
				<TextBox Grid.Row="6" Grid.Column="1" Name="txtEmail" Margin="0,4,0,15" Style="{StaticResource TextBoxStyle}"/>

				<!-- Buttons -->
				<StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,84,10,-64" Grid.Column="1">
					<Button Name="btnCancel" Style="{StaticResource PrimaryButton}" Click="btnCancel_Click" Margin="0, 0, 20, 0">Zrušit</Button>
					<Button Name="btnOk" Style="{StaticResource PrimaryButton}" Width="100" IsDefault="True">Ok</Button>
				</StackPanel>
			</Grid>
		</Border>
	</Grid>
</Window>