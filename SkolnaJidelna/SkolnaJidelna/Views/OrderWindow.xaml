<Window x:Class="SkolniJidelna.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vytvořit objednávku - Školní jídelna" Height="900" Width="1300"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель: меню -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF6B9E" Offset="0"/>
                    <GradientStop Color="#FF8B5E" Offset="0.5"/>
                    <GradientStop Color="#FFB66E" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Canvas>
                <Ellipse Width="150" Height="150" Fill="#30FFFFFF" Canvas.Left="-50" Canvas.Top="100"/>
                <Ellipse Width="200" Height="200" Fill="#20FFFFFF" Canvas.Left="200" Canvas.Top="400"/>
            </Canvas>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Panel.ZIndex="1">
                <StackPanel VerticalAlignment="Top" Margin="40" Panel.ZIndex="1">
                    <TextBlock Text="Vyberte jídla" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,20,0,20"/>

                    <!-- Фильтры -->
                    <TextBlock Text="Typ menu" FontSize="16" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <ComboBox x:Name="comboTypMenu" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,20" SelectionChanged="comboTypMenu_SelectionChanged">
                        <ComboBoxItem Content="Vše"/>
                        <ComboBoxItem Content="SNIDANE"/>
                        <ComboBoxItem Content="OBED"/>
                    </ComboBox>

                    <Button Content="Filtrovat" Style="{StaticResource LightButton}" Margin="0,0,0,30" Click="FilterButton_Click"/>

                    <!-- Список меню с блюдами как в MenuWindow -->
                    <ItemsControl ItemsSource="{Binding Menus}" Margin="0,0,0,20">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="{Binding Nazev}" FontSize="20" FontWeight="Bold" Foreground="White"/>
                                    <ItemsControl ItemsSource="{Binding Jidla}" Margin="0,10,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="15" Background="White" Padding="15" Margin="0,0,0,15" BorderThickness="2">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2" Color="#000000"/>
                                                    </Border.Effect>
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="BorderBrush" Value="#DDD"/>
                                                            <Setter Property="Background" Value="White"/>
                                                            <Style.Triggers>
                                                                <!-- Diet yellow first -->
                                                                <DataTrigger Binding="{Binding IsDietConflict}" Value="True">
                                                                    <Setter Property="BorderBrush" Value="#E6C200"/>
                                                                    <Setter Property="Background" Value="#FFFDF0CC"/>
                                                                </DataTrigger>
                                                                <!-- Allergy red after so it has priority if both true -->
                                                                <DataTrigger Binding="{Binding IsAllergic}" Value="True">
                                                                    <Setter Property="BorderBrush" Value="Red"/>
                                                                    <Setter Property="Background" Value="#FFFFEEEE"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="6"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <!-- Left color bar: yellow for diet, red overrides if allergy also true -->
                                                        <Border Grid.Column="0" Background="Transparent">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="Transparent"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsDietConflict}" Value="True">
                                                                            <Setter Property="Background" Value="#E6C200"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IsAllergic}" Value="True">
                                                                            <Setter Property="Background" Value="Red"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>

                                                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                                            <TextBlock Text="{Binding Nazev}" FontSize="18" FontWeight="Bold" Margin="0,0,0,5">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="Black"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsDietConflict}" Value="True">
                                                                                <Setter Property="Foreground" Value="#8A6D00"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding IsAllergic}" Value="True">
                                                                                <Setter Property="Foreground" Value="Red"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                            <TextBlock Text="{Binding Popis}" FontSize="12" Foreground="#757575" Margin="0,0,0,5"/>
                                                            <TextBlock Text="{Binding Cena, StringFormat='Cena: {0} Kč'}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                                            <!-- Warning banner for allergens -->
                                                            <Border CornerRadius="8" Background="#FFFFD5D5" Padding="8" Margin="0,0,0,8" Visibility="Collapsed">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsAllergic}" Value="True">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="⚠ " FontSize="16" Foreground="Red"/>
                                                                    <TextBlock Text="Obsahuje vaše alergeny: " FontSize="12" Foreground="Red" FontWeight="Bold"/>
                                                                    <TextBlock Text="{Binding MatchedAllergens}" FontSize="12" Foreground="Red"/>
                                                                </StackPanel>
                                                            </Border>

                                                            <!-- Warning banner for diet conflicts -->
                                                            <Border CornerRadius="8" Background="#FFFBE7A1" Padding="8" Margin="0,0,0,8" Visibility="Collapsed">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsDietConflict}" Value="True">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="⚠ " FontSize="16" Foreground="#8A6D00"/>
                                                                    <TextBlock Text="Nekompatibilní s vaší dietou: " FontSize="12" Foreground="#8A6D00" FontWeight="Bold"/>
                                                                    <TextBlock Text="{Binding MatchedDietKeywords}" FontSize="12" Foreground="#8A6D00"/>
                                                                </StackPanel>
                                                            </Border>

                                                            <Button Content="Přidat do objednávky" Style="{StaticResource SecondaryButton}" Padding="10,5" Click="AddToOrderButton_Click" Tag="{Binding}"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Правая панель: корзина заказа -->
        <Grid Grid.Column="1">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFF5F8" Offset="0"/>
                    <GradientStop Color="#FFF9F0" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Canvas>
                <Ellipse Width="120" Height="120" Fill="#FFE5B430" Canvas.Right="50" Canvas.Top="80"/>
                <Ellipse Width="80" Height="80" Fill="#FFB6D930" Canvas.Right="200" Canvas.Top="500"/>
            </Canvas>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Panel.ZIndex="1">
                <StackPanel VerticalAlignment="Top" Margin="70,40" Panel.ZIndex="1">
                    <TextBlock Text="Vaše objednávka" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,20">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FF6B9E" Offset="0"/>
                                <GradientStop Color="#FF8B5E" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>

                    <!-- Datum objednávky -->
                    <TextBlock Text="Datum objednávky" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <DatePicker SelectedDate="{Binding SelectedDate}" Margin="0,0,0,20" Style="{StaticResource DatePickerStyle}" Height="60"/>

                    <!-- Корзина -->
                    <ItemsControl ItemsSource="{Binding CartItems}" Margin="0,0,0,20">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="10" Background="#F0F0F0" Padding="10" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Nazev}" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Mnozstvi, StringFormat='Počet: {0}'}" FontSize="14" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding CenaCelkem, StringFormat='Cena: {0} Kč'}" FontSize="14" Margin="0,0,10,0"/>
                                        <Button Content="Odebrat" Style="{StaticResource SecondaryButton}" Padding="5,2" Click="RemoveFromOrderButton_Click" Tag="{Binding IdJidlo}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Итоговая цена -->
                    <TextBlock x:Name="textTotal" Text="{Binding TotalFormatted}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <!-- Спосoby оплаты -->
                    <TextBlock Text="Způsob platby" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                        <RadioButton x:Name="radioPlatbaKartou" Content="Kartou" GroupName="Platba" IsChecked="True" Style="{StaticResource RadioButtonStyle}" Height="30"/>
                        <RadioButton x:Name="radioPlatbaUctem" Content="Z účtu" GroupName="Platba" Style="{StaticResource RadioButtonStyle}" Height="30"/>
                        <RadioButton x:Name="radioPlatbaPriVyzvednuti" Content="Při vyzvednutí (hotově)" GroupName="Platba" Style="{StaticResource RadioButtonStyle}" Height="30"/>
                    </StackPanel>

                    <!-- Поле для заметки -->
                    <TextBlock Text="Poznámka k objednávce" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBox x:Name="textBoxPoznamka" Style="{StaticResource TextBoxStyle}" Height="60" TextWrapping="Wrap" Margin="0,0,0,30" TextChanged="textBoxPoznamka_TextChanged"/>

                    <!-- Кнопки -->
                    <Button Content="Objednat" Style="{StaticResource PrimaryButton}" Margin="0,0,0,15" Click="OrderButton_Click"/>
                    <Button Content="Zpět do profilu" Style="{StaticResource SecondaryButton}" Click="BackButton_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>