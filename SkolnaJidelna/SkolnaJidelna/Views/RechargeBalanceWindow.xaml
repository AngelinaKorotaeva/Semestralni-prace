<Window x:Class="SkolniJidelna.RechargeBalanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Doplnit zustatek" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFF5F8" Offset="0"/>
            <GradientStop Color="#FFF9F0" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Zadejte castku k doplneni (Kc):" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <TextBox x:Name="AmountTextBox" Style="{StaticResource TextBoxStyle}" Margin="0,0,0,20" Text="0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Potvrdit" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0" Click="ConfirmButton_Click"/>
                <Button Content="Zamitnout" Style="{StaticResource SecondaryButton}" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>