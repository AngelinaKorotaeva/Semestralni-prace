<Window x:Class="SkolniJidelna.EditDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkolniJidelna"
        mc:Ignorable="d"
        Title="Upravit" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">

    <Window.Resources>
        <DataTemplate x:Key="PropertyTemplate">
            <StackPanel Margin="0,10">
                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#4A4A4A"/>
                <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource TextBoxStyle}" Margin="0,5,0,0"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFF5F8" Offset="0"/>
                <GradientStop Color="#FFF9F0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel Margin="20">
            <TextBlock Text="Upravit polozku" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FF6B9E" Offset="0"/>
                        <GradientStop Color="#FF8B5E" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="400">
                <ItemsControl ItemsSource="{Binding}" ItemTemplate="{StaticResource PropertyTemplate}"/>
            </ScrollViewer>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Ulozit" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Cancel" Style="{StaticResource SecondaryButton}" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>