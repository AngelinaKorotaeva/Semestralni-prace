<Window x:Class="SkolniJidelna.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SkolniJidelna.ViewModels"
        Title="Menu - Školní jídelna" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель: фильтры -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF6B9E" Offset="0"/>
                    <GradientStop Color="#FF8B5E" Offset="0.5"/>
                    <GradientStop Color="#FFB66E" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Canvas>
                <Ellipse Width="150" Height="150" Fill="#30FFFFFF" Canvas.Left="-50" Canvas.Top="100"/>
                <Ellipse Width="200" Height="200" Fill="#20FFFFFF" Canvas.Left="200" Canvas.Top="400"/>
            </Canvas>

            <StackPanel VerticalAlignment="Center" Margin="40" Panel.ZIndex="1">
                <!-- Лого -->
                <Border Background="White" CornerRadius="35" Width="100" Height="100" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="25" ShadowDepth="8" Opacity="0.4" Color="Black"/>
                    </Border.Effect>
                    <Viewbox Width="60" Height="60">
                        <TextBlock Text="🍽️" FontSize="50"/>
                    </Viewbox>
                </Border>

                <TextBlock Text="Filtry menu" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <!-- Фильтр по типу меню -->
                <TextBlock Text="Typ menu" FontSize="16" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <ComboBox x:Name="comboTypMenu" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,20" Height="66"
                          ItemsSource="{Binding TypyMenuItems}"
                          SelectedValuePath="Key"
                          DisplayMemberPath="Nazev"
                          SelectedValue="{Binding SelectedTypMenu, Mode=TwoWay}"/>

                <!-- Кнопки -->
                <Button Content="Filtrovat" Style="{StaticResource LightButton}" Margin="0,0,0,20" Command="{Binding FilterCommand}"/>
                <Button Content="Zpět do profilu" Style="{StaticResource LightButton}" Click="BackButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Правая панель: дерево меню с блюдами -->
        <Grid Grid.Column="1">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFF5F8" Offset="0"/>
                    <GradientStop Color="#FFF9F0" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Canvas>
                <Ellipse Width="120" Height="120" Fill="#FFE5B430" Canvas.Right="50" Canvas.Top="80"/>
                <Ellipse Width="80" Height="80" Fill="#FFB6D930" Canvas.Right="200" Canvas.Top="500"/>
            </Canvas>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Panel.ZIndex="1">
                <StackPanel VerticalAlignment="Top" Margin="70,40" Panel.ZIndex="1">
                    <TextBlock Text="Odpovídající menu a jídla" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,30">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FF6B9E" Offset="0"/>
                                <GradientStop Color="#FF8B5E" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>

                    <TreeView ItemsSource="{Binding Menus}" Margin="0,0,0,20">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="Margin" Value="0,0,0,10"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <!-- Ensure text stays visible when selected/unfocused -->
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocusWithin" Value="False">
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TreeView.ItemContainerStyle>

                        <TreeView.Resources>
                            <!-- Kořenová úroveň: MenuNode -->
                            <HierarchicalDataTemplate DataType="{x:Type vm:MenuNode}" ItemsSource="{Binding Jidla}">
                                <Border CornerRadius="15" Background="White" Padding="16" Margin="0,0,0,5">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.1" Color="#FF6B9E"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Nazev}" FontSize="18" FontWeight="Bold" Foreground="Black"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                            <Border CornerRadius="8" Padding="6,2">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#FFB6D9" Offset="0"/>
                                                        <GradientStop Color="#FF6B9E" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <TextBlock Text="{Binding TypMenu}" FontSize="12" Foreground="White" FontWeight="SemiBold"/>
                                            </Border>
                                            <TextBlock Text="  •  " FontSize="12" Foreground="#999" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding TimeOd, StringFormat={}{0:dd.MM.yyyy}}" FontSize="12" Foreground="Black"/>
                                            <TextBlock Text=" - " FontSize="12" Foreground="Black"/>
                                            <TextBlock Text="{Binding TimeDo, StringFormat={}{0:dd.MM.yyyy}}" FontSize="12" Foreground="Black"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding StavText}" FontSize="12" Foreground="#757575" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </HierarchicalDataTemplate>

                            <!-- Dětská úroveň: JidloItem -->
                            <DataTemplate DataType="{x:Type vm:JidloItem}">
                                <Border CornerRadius="12" Background="White" Padding="14" Margin="20,0,0,8">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.08" Color="#FF6B9E"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Nazev}" FontSize="16" FontWeight="Bold" Foreground="Black"/>
                                            <TextBlock Text="  •  " FontSize="14" Foreground="#999999"/>
                                            <TextBlock Text="{Binding Cena, StringFormat={}{0} Kč}" FontSize="14" FontWeight="SemiBold" Foreground="Black"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Popis}" FontSize="12" Foreground="#757575" Margin="0,4,0,6"/>
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Poznamka}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Poznamka}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <Border CornerRadius="8" Padding="6,2" Margin="0,4,0,0">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#FFE6C07B" Offset="0"/>
                                                        <GradientStop Color="#FFFFD27A" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <TextBlock Text="{Binding Poznamka, StringFormat= Poznámka: {0}}" FontSize="12" Foreground="#5C4200"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </TreeView.Resources>
                    </TreeView>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
