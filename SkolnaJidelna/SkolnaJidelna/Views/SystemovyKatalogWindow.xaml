<Window x:Class="SkolniJidelna.SystemovyKatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Systemový katalog" Height="670" Width="700" WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFF5F8" Offset="0"/>
                <GradientStop Color="#FFF9F0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel Margin="20">
            <TextBlock Text="Systemový katalog" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FF6B9E" Offset="0"/>
                        <GradientStop Color="#FF8B5E" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Dotaz:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="QuerySelector" Width="420" SelectionChanged="QuerySelector_SelectionChanged"
                          IsEditable="True" IsReadOnly="True" Style="{StaticResource ComboBoxStyle}"
                          ItemsSource="{Binding Queries}"/>
            </StackPanel>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="400">
                <ListBox x:Name="ResultList" Style="{StaticResource ListBoxStyle}" ItemsSource="{Binding Results}"/>
            </ScrollViewer>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                <Button Content="Zavřít" Click="Close_Click" Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
