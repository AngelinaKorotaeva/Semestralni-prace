<Window x:Class="SkolniJidelna.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Platba objednávky" Height="550" Width="750" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Border Style="{StaticResource InfoCard}" Padding="20">
            <StackPanel>
                <TextBlock Text="Způsob platby" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                <!-- Card payment section -->
                <StackPanel x:Name="panelCard" Visibility="Collapsed">
                    <TextBlock Text="Platba kartou" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock Text="Číslo karty" Margin="0,0,0,5"/>
                    <TextBox x:Name="textCardNumber" Style="{StaticResource TextBoxStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="Jméno držitele" Margin="0,0,0,5"/>
                    <TextBox x:Name="textCardName" Style="{StaticResource TextBoxStyle}" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="MM/YY" Margin="0,0,0,5"/>
                            <TextBox x:Name="textCardExpiry" Style="{StaticResource TextBoxStyle}" Width="120"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="CVV" Margin="0,0,0,5"/>
                            <PasswordBox x:Name="textCardCvv" Style="{StaticResource PasswordBoxStyle}" Width="100"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Account payment info -->
                <StackPanel x:Name="panelAccount" Visibility="Collapsed" Margin="0,10,0,0">
                    <TextBlock Text="Platba z účtu" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock Text="Částka bude stržena z vašeho účtu."/>
                </StackPanel>

                <!-- Cash on pickup info -->
                <StackPanel x:Name="panelCash" Visibility="Collapsed" Margin="0,10,0,0">
                    <TextBlock Text="Platba při vyzvednutí" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock Text="Zaplatíte v hotovosti při vyzvednutí objednávky."/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Zaplatit" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0" Click="PayButton_Click"/>
                    <Button Content="Zrušit" Style="{StaticResource SecondaryButton}" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>